<% provide(:title, "give_feedback_for_professor") %>
<h3 xmlns="http://www.w3.org/1999/html">Enter your feedback for professor</h3>
<div class="row" style="height: 400px">
  <div id="prof_rating_form" >
    <%=form_for @prof_rating do |f| %>
        <%=label_tag(:prof_ratings,"How do you rate the professor?")%></br>
        <div>
        <%=label_tag(:fluency,"A) Language and Fluency:")%></br>
          <%= f.range_field :fluency, :min=>0, :max=>4, :class=>"slide", :id=>"fluency"%>
        </div>
        <div>
        <%=label_tag(:course_material,"B) Course Material:")%></br>
          <%= f.range_field :course_material, :min=>0, :max=>4, :class=>"slide", :id=>"course_material"%>
        </div>
        <div>
        <%=label_tag(:knowledge,"C) Course knowledge:")%></br>
          <%= f.range_field :knowledge, :min=>0, :max=>4, :class=>"slide", :id=>"knowledge"%>
        </div>
        <div>
        <%=label_tag(:doubt_solving,"D) Helpfulness:")%></br>
          <%= f.range_field :doubt_solving, :min=>0, :max=>4, :class=>"slide", :id=>"doubt_solving"%>
        </div>
        <%=f.submit "create", class: "btn btn-primary submit"%>
    <%end%>
  </div>
</div>
<style>
  .slider-tick-label{
    font-size: 11px;
  }
  .slider.slider-horizontal{
      margin-bottom: 35px!important;
      margin-left: 35px;
      margin-top: 10px;
  }
    #prof_rating_form{
      align-content: center;
      width: 75%;
      padding: 10px;
      left:100px;
    }
    .submit{
      width:275px;
    }

    .slider.slider-horizontal .slider-track {
    height: 15px;
    width: 100%;
    margin-top: -7.5px;
    top: 50%;
    left: 0;
  }
</style>
<script type="text/javascript">
  $('#fluency').slider({
    formatter: function(value) {
      return 'Fluency: ' + value;
    },
    ticks: [0, 1, 2, 3, 4],
    ticks_positions: [0,25,50,75,100],
    ticks_labels: ['Not Fluent', '', '', '', 'Very Fluent'],
    ticks_snap_bounds: 1
  });

  $('#course_material').slider({
    formatter: function(value) {
      return 'Course Material ' + value;
    },
    ticks: [0, 1, 2, 3, 4],
    ticks_positions: [0,25,50,75,100],
    ticks_labels: ['Not Good', '', '', '', 'Very Good'],
    ticks_snap_bounds: 1
  });

  $('#knowledge').slider({
    formatter: function(value) {
      return 'Knowledge: ' + value;
    },
    ticks: [0, 1, 2, 3, 4],
    ticks_positions: [0,25,50,75,100],
    ticks_labels: ['Preliminary', '', '', '', 'In-Depth'],
    ticks_snap_bounds: 1
  });

  $('#doubt_solving').slider({
    formatter: function(value) {
      return 'Helpfulness: ' + value;
    },
    ticks: [0, 1, 2, 3, 4],
    ticks_positions: [0,25,50,75,100],
    ticks_labels: ['Not helpful', '', '', '', 'Welcoming'],
    ticks_snap_bounds: 1
  });

</script>

