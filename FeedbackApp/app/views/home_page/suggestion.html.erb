<% provide(:title, "suggestion") %>
<div class="row" style="height: 462px;">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:feedback, url: proper_course_path) do |f| %>
        <br />
        <%=f.label :num_of_exam %><br>
        <%= f.select(:num_of_exam, options_for_select([['No selection',0],['1',1], ['2',2], ['3',3],['4',4],['5 or more',5]])) %>
        <br />
        <%=f.label :num_of_project %><br>
        <%= f.select(:num_of_project, options_for_select([['No selection',0],['1',1], ['2',2], ['3',3],['4',4],['5 or more',5]])) %>
        <br />

        <%=f.label :num_of_assignment %><br>
        <%= f.select(:num_of_assignment, options_for_select([['No selection',0],['1',1], ['2',2], ['3',3],['4',4],['5 or more',5]])) %>
        <br />

        <%=f.label :job_relevance %><br>
        <%= f.select(:job_relevance, options_for_select([['No selection',0],['1',1], ['2',2], ['3',3],['4',4]])) %>
        <br />

        <%=f.label :workload %><br>
        <%= f.select(:workload, options_for_select([['No selection',0], ['4-5',1],['7-8',2], ['10-12',3]])) %>
        <br />

        <%=f.label :category %><br>
      <%= f.select(:category, options_for_select([['No selection',0],[ "System","1"], ["Design","2"],["Networks","3"],["Software engineering","4"],["Data Science","5"],["Other","0"]])) %>
        <%=f.label :languages %><br>
        <%= f.select(:languages, options_for_select([['No selection','0'],[ "C","C"], ["C++","C++"],["Java","Java"],["Python","Python"],["Ruby","Ruby"],["Scala","Scala"],["Javascript","Scala"],["HTML","HTML"],["Other","Other"]])) %>
        <br />

        <%= f.submit "Search", class: "btn btn-primary" %>
        <br />
        <br />

    <% end %>
  </div>
  </div>
