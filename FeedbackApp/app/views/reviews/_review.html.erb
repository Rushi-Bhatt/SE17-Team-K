<li id="review-<%= review.id %>">
  <%= link_to gravatar_for(review.user, size:50), review.user %>
  <span class="user"><%= link_to review.user.name, review.user %></span>
  <span class="content"><%= review.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
  </span>
  <span>
    <%= link_to "Like", like_path(:review_id => review.id, :course_id => review.course_id) %>
    <%= review.likes %>
    <%= link_to "Dislike", dislike_path(:review_id => review.id, :course_id => review.course_id) %>
    <%= review.dislikes %>
  </span>
</li>